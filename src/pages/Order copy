            height: 50px;

            &:hover{
                opacity: 0.5;
            }
        }
        .right{
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: ${colors.error};
            color: ${colors.background};
            padding: 10px;
            text-align: center;
            font-family: Whitney Bold;
            transition: 200ms;
            height: 50px;
            &:hover{
                opacity: 0.5;
            }
        }
    }

    .box {
        background-color: ${colors.background_third};
        padding: 10px;
        align-items: center;
        margin-top: 10px;
